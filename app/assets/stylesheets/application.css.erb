/* LOGIN PAGE */
/* Center form container */
.login-form-container {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
  }
  
  .form-box {
    padding: 20px;
    width: 300px;
    background: white;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    border-radius: 8px;
  }
  
  .form-box h2 {
    text-align: center;
  }
  
  .form-box .field {
    display: flex;
    flex-direction: column;
    align-items: stretch;
    margin: 10px;
  }
  
  .form-box .field label {
    align-self: flex-start; /* Align labels to the left */
  }
  
  .form-box .field input {
    width: 100%;
    padding: 8px;
    border-radius: 4px;
    border: 1px solid #ccc;
  }
  
  .form-box .remember-me-container {
    display: flex;
    align-items: center;
    gap: 5px; /* Small gap between checkbox and label */
    margin-top: 15px;
    margin-bottom: 15px;
  }
  
  .form-box .actions .btn {
    width: 100%;
    padding: 10px;
    font-size: 16px;
    background-color: #4CAF50;
    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }
  
  .form-box .actions .btn:hover {
    background-color: #45a049;
  }
  
  /* Signup link styling */
  .signup-link {
    display: block;
    text-align: center;
    margin-top: 15px;
    font-size: 14px;
  }
  
  .signup-link a {
    color: #007BFF;
    text-decoration: none;
    transition: color 0.3s ease;
  }
  
  .signup-link a:hover {
    color: #0056b3;
    text-decoration: underline;
  }
  
