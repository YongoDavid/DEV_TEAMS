.btn-primary:hover {
  background-color: #2563eb;
}

.btn-secondary {
  background-color: #f1f5f9;
  color: #64748b;
}

.btn-secondary:hover {
  background-color: #e2e8f0;
}

.login-prompt {
  text-align: center;
