<div class="dashboard-container">
  <aside class="sidebar">
    <div class="logo-container">
      <div class="logo-circle">
        <i class="fas fa-project-diagram"></i>
      </div>
      <h2>TEAMS</h2>
    </div>
    
    <nav class="nav-menu">
      <a href="#" class="nav-item active">
        <i class="fas fa-th-large"></i>
        <span>Dashboard</span>
      </a>
      <a href="<%= new_project_path %>" class="nav-item">
        <i class="fas fa-plus-circle"></i>
        <span>Add Project</span>
      </a>
      <a href="<%= edit_user_registration_path %>" class="nav-item">
        <i class="fas fa-user-edit"></i>
        <span>Edit Profile</span>
      </a>
      <a href="<%= projects_path %>" class="nav-item">
        <i class="fas fa-tasks"></i>
        <span>Projects</span>
      </a>
      <a href="<%= admin_projects_path %>" class="nav-item">
        <i class="fas fa-user-shield"></i>
        <span>Admin</span>
      </a>
      <a href="<%= destroy_user_session_path %>" class="nav-item" data-method="delete">
        <i class="fas fa-sign-out-alt"></i>
        <span>Sign Out</span>
      </a>

      <div class="nav-group">
        <h3>Projects</h3>
        <a href="#" class="nav-item">
          <i class="fas fa-circle text-primary"></i>
          <span>Active Project</span>
        </a>
        <a href="#" class="nav-item">
          <i class="fas fa-circle text-success"></i>
          <span>Project Done</span>
        </a>
        <a href="#" class="nav-item">
          <i class="fas fa-circle text-danger"></i>
          <span>Project On Hold</span>
        </a>
      </div>
    </nav>
  </aside>

  <main class="main-content">
    <header class="dashboard-header">
      <div class="user-welcome">

        <div class="welcome-text">
          <p>Hey, <%= 'User' %></p>
          <span class="date"><%= Time.current.strftime("%A, %B %d, %Y") %></span>
        </div>
      </div>

      <div class="header-actions">
        <div class="search-bar">
          <i class="fas fa-search"></i>
          <input type="text" placeholder="Start searching here...">
        </div>
        <button class="icon-button"><i class="fas fa-cog"></i></button>
        <button class="icon-button"><i class="fas fa-bell"></i></button>
      </div>
    </header>

    <div class="stats-grid">
      <div class="stat-card">
        <div class="stat-content">
          <div class="stat-header">
            <i class="fas fa-users"></i>
            <button class="expand-button"><i class="fas fa-expand"></i></button>
          </div>
          <div class="stat-info">
            <h3>Active Employees</h3>
            <p class="stat-number">547</p>
          </div>
        </div>
      </div>
      
      <div class="stat-card">
        <div class="stat-content">
          <div class="stat-header">
            <i class="fas fa-folder"></i>
            <button class="expand-button"><i class="fas fa-expand"></i></button>
          </div>
          <div class="stat-info">
            <h3>Number of Projects</h3>
            <p class="stat-number">339</p>
          </div>
        </div>
      </div>
      
      <div class="stat-card">
        <div class="stat-content">
          <div class="stat-header">
            <i class="fas fa-tasks"></i>
            <button class="expand-button"><i class="fas fa-expand"></i></button>
          </div>
          <div class="stat-info">
            <h3>Number of Tasks</h3>
            <p class="stat-number">147</p>
          </div>
        </div>
      </div>
      
      <div class="stat-card">
        <div class="stat-content">
          <div class="stat-header">
            <i class="fas fa-chart-line"></i>
            <button class="expand-button"><i class="fas fa-expand"></i></button>
          </div>
          <div class="stat-info">
            <h3>Target Percentage Completed</h3>
            <p class="stat-number">89.75%</p>
          </div>
        </div>
      </div>
    </div>

    <div class="ongoing-projects">
      <div class="section-header">
        <h2>On Going Task</h2>
        <div class="section-actions">
          <button class="icon-button"><i class="fas fa-search"></i></button>
          <button class="icon-button"><i class="fas fa-filter"></i></button>
        </div>
      </div>

      <div class="projects-list">
        <% @projects.each do |project| %>
          <div class="project-item">
            <div class="project-info">
              <div class="project-icon">
                <i class="fas fa-briefcase"></i>
              </div>
              <div class="project-details">
                <h3><%= project.name %></h3>
                <p><%= project.description %></p>
              </div>
            </div>
          <div class="project-meta">
            <div class="team-avatars">
              <!-- Add team member avatars here -->
            </div>
            <div class="project-progress">
              <span>Progress</span>
              <div class="progress-bar">
                <div class="progress" style="width: <%= project.progress.present? ? project.progress : 0 %>%"></div>
              </div>
              <span><%= project.progress.present? ? project.progress : 0 %>%</span>
            </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </main>
</div>